---
const { title, desc, image, link } = Astro.props;
---

<div class="card">
    <a href={link}>
        <img src={image} alt={title}/>
        <h2 class="title">{title}</h2>
        <p class="description">
            {desc}
        </p>
    </a>
</div>

<style>
    .card {
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        width: 720px;
        padding-bottom: 1em;
    }

    a {
        text-decoration: none;
    }

    img {
        width: 100%;
        max-width: 720px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .title {
        text-align: left;
        margin-left: 1em;
        color: #000;
    }

    .description {
        color: rgb(var(--gray));
        text-align: left;
        margin-inline: 1.5em;
        line-height: 125%;
    }
</style>